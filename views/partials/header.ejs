<!DOCTYPE html>
<html>
    <head>
        <title>OLX</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    </head>
    <body>
        <div class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">OLX</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/campgrounds" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/campgrounds/new" class="nav-link">Add</a>
                        </li>
                        <li class="nav-item">
                            <a href="/contact" class="nav-link">Contact</a>
                        </li>
                    </ul>
                    <div class="container">
                        <div class="row ">
                            <ul class="navbar-nav ml-lg-auto mr-lg-2">
                                <% if(!currentUser){ %>
                                    <li class="nav-item">
                                        <a href="/login" class="nav-link">Login</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/signUp" class="nav-link">SignUp</a>
                                    </li>
                                <% } else{ %>
                                    <li class="nav-item">
                                        <a href="/users/<%= currentUser._id %>" class="nav-link text-info">Signed in as <%= currentUser.username %> </a>
                                    </li>
                                    <% if(currentUser && currentUser.isAdmin){ %>
                                        <li class="nav-item">
                                            <p class="nav-link text-info">(admin)</p>
                                        </li>
                                    <%} %>
                                    <li class="nav-item">
                                        <a href="/logout" class="nav-link">Logout</a>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <% if(error && error.length>0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length>0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
            <% if(info && info.length>0){ %>
                <div class="alert alert-info" role="alert">
                    <%= info %>
                </div>
            <% } %>
        </div>