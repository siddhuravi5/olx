<%- include("./partials/header.ejs") %>

<div id="back-1">
    <div class="container my-5 mx-auto text-center" style="width:40%;">
        <div class="text-center"><h2 class="mb-3 mt-2 px-0">SignUp</h2></div>
        <div class="p-5" style=" border: 3px solid rgb(20, 20, 20);">
                <form action="/signup" method="POST">
                    <div class="form-group">
                      <label for="name1">Username</label>
                      <input type="text" class="form-control" id="name1" name="username" placeholder="username">
                    </div>
                    <div class="form-group">
                        <label for="pass-1">Password</label>
                        <input type="password" class="form-control" name="password"  id="pass-1" placeholder="password">
                    </div>
                    <div class="form-group">
                        <label for="name2">Contact Number</label>
                        <input type="text" class="form-control" id="name2" name="phone" placeholder="contact number">
                    </div>
                    <div class="form-group">
                        <label for="name3">Pin</label>
                        <input type="text" class="form-control" id="name3" name="pin" placeholder="pin">
                    </div>
                    <div class="form-group">
                        <label for="name4">City</label>
                        <input type="text" class="form-control" id="name4" name="city" placeholder="city">
                    </div>
                    <div class="form-group">
                        <label for="name5">State</label>
                        <input type="text" class="form-control" id="name5" name="state" placeholder="state">
                    </div>
                    <!-- <div class="form-group">
                      <label for="image">Avatar</label>
                      <input type="file" id="image" name="image" accept="image/*" >
                  </div> -->
                    
                    <button type="submit" class="btn btn-success">Create Account</button>
                  </form>
        </div>
    </div>
</div>

